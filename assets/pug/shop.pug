extends base/layout.pug
block title
    title Our Products
block header
    div(class="style-subpage style-pages style-four")
        include components/header/menu/menu-one.pug
    include mixins/productItem.pug
block content 
    .breadcrum-heading.bg-breadcrum
        .container 
            .flex-item-center.pt-8.pb-8
                a(href="index.html").body2.fw-500.text-on-surface-variant2 Home 
                i.ph-fill.ph-dot-outline.text-on-surface-variant2.pl-12
                .body2.fw-500.text-on-surface-variant2.pl-12 Pages 
                i.ph-fill.ph-dot-outline.text-on-surface-variant2.pl-12
